<!DOCTYPE html>
<html>
<head>
  <title>Guessing Game</title>
</head>
<body>
  <h2>Guess the Number (1 - 100)</h2>
  
  <!-- Input box -->
  <label>Enter your guess: </label>
  <input type="number" id="userGuess" min="1" max="100">
  <button onclick="checkIt()">Check</button>
  
  <!-- Output area -->
  <p id="result"></p>

  <script>
    // Generate a random number from 1 to 100
    var dNumber = Math.floor(Math.random() * 100) + 1;

    function checkIt() {
      // Read user input
      var guess = parseInt(document.getElementById("userGuess").value);

      // Compare with dNumber
      if (guess < dNumber) {
        document.getElementById("result").innerHTML = "Higher!";
      } else if (guess > dNumber) {
        document.getElementById("result").innerHTML = "Lower!";
      } else if (guess === dNumber) {
        document.getElementById("result").innerHTML = "You are correct!";
      } else {
        document.getElementById("result").innerHTML = "Please enter a valid number!";
      }
    }
  </script>
</body>
</html>